    <script>
        // Fungsi untuk mendapatkan parameter dari URL
        function getParameterByName(name, url = window.location.href) {
            name = name.replace(/[\[\]]/g, '\\$&');
            var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, ' '));
        }

        // Ambil nama tamu dari parameter 'to' di URL
        var guestName = getParameterByName('to');
        var placeholder = document.getElementById('guestNamePlaceholder');

        // Jika nama tamu ditemukan, tampilkan. Jika tidak, tetap gunakan teks default "Tamu Undangan".
        if (guestName) {
            placeholder.textContent = guestName;
        }

        // --- Tambahan untuk Audio ---
        // Mendeteksi interaksi pengguna pertama kali untuk mencoba memutar audio
        // Ini adalah upaya untuk mengatasi kebijakan autoplay browser
        document.addEventListener('click', function playAudioOnce() {
            var iframe = document.querySelector('.youtube-audio iframe');
            if (iframe) {
                // Mencoba memutar video/audio saat ada klik pertama kali di dokumen
                // Ini mungkin tidak bekerja di semua browser karena kebijakan autoplay
                iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
            }
            // Hapus event listener setelah interaksi pertama
            document.removeEventListener('click', playAudioOnce);
        });

        // Alternatif: Menambahkan tombol play/pause (lebih ramah pengguna)
        // Jika Anda ingin tombol play/pause, kita bisa tambahkan.
        // Beri tahu saya jika Anda lebih suka opsi ini daripada autoplay tersembunyi.
    </script>
